
<div class="small_panel fouc" title="Request Account" >
  
	<% if resource.errors.any? %>
	  <% resource.errors.full_messages.each do |msg| %>
		<%= js add_gritter( msg, :image => :error, :sticky => true ) %>
	  <% end %>
	<% end %>
	
	<%= simple_form_for(resource, :as => resource_name, :url => registration_path(resource_name)) do |f| %>
	  <div class="input string required">
        <label class="required" for="company"><abbr title="required">*</abbr> Company</label>
		<%= autocomplete_field_tag 'company', '', autocomplete_company_name_ajax_index_path, :id_element => '#user_company_id' %> 
		<span class="hint">start typing the company name</span>
	  </div>
	  
	  <%= f.input :first_name %>
	  <%= f.input :last_name %>
	  <%= f.input :email %>
	  <%= f.input :password, :required => true%>
	  <%= f.input :password_confirmation, :required => true %>
	  <%= f.input :active, :as => :hidden, :input_html => { :value => '0' } %>
	  <%= f.input :company_id, :as => :hidden %>
	  <%= f.submit "Sign up" %>
	  
	<% end %>

	<%= render :partial => "devise/shared/links" %>
  
</div>
