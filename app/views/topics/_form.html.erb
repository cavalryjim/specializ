<%= simple_form_for @topic do |f| %>
  <% if @topic.errors.any? %>
    <% @topic.errors.full_messages.each do |msg| %>
	  <%= js add_gritter( msg, :title => "Error", :image => :error, :sticky => true ) %>
    <% end %>
  <% end %>

  <%= f.input :name %>
  <%= f.input :description %>

  
	<%= f.label 'Participating Groups: ' %>
	<%= select_tag(:groupings, options_for_select(nested_set_options(current_user.root_grouping) {|i| "#{' -' * i.level} #{i.name}" }, 
			:selected => @selected_groups ), { :multiple => true } ) %>
 
  
  <%= f.input :status, :collection => [ 'Open', 'Closed', 'Archived' ] %>

  
    <%= f.label :status %>
    <%= f.select(:status, [['Open', 1], ['Closed', 2], ['Archived', 3]])%>
  
  <%= f.input :goal %>
  <%= f.input :update_frequency %> days
  <%= f.input :due_days %> days
  <%= f.input :opt_out %>
  <%= f.button :submit %>

<% end %>


