<h3>Libraries</h3>
<div>
	<table id="library_topic_group_table" class="display ">
	 <thead>
	  <tr>
	    <th class="center"></th>
	    <th class="center">Number</th>
	    
	    <th class="center">Name</th>
	  </tr>
	 </thead>
	 <tbody>
	  <% @libraries.each do |library| %>
	  	<tr id="library-<%=library.id%>" class="<%=library.html_class%>">
		  <td width="5px"><%= check_box_tag library.id, library.selected?(@topic.id) %></td>

		  <td width="7px">
			<%= library.number %>
		  </td>

		  <td>
			
			<%= library.name %>
		  </td>

		</tr>
	  <% end %>
	 </tbody>
	</table>
</div>


<%= button_to 'Populate Topic', topic_populate_from_library_path(@topic), :confirm => 'Populate the topic from the selected libraries?'  %> 

