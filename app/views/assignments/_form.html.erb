<%= simple_form_for [@topic, @assignment], :validate => true do |f| %>
  <% if @assignment.errors.any? %>
  	<% @assignment.errors.full_messages.each do |msg| %>
	  	<%= js add_gritter( msg, :title => "Error", :image => :error, :sticky => true ) %>
    <% end %>
  <% end %>
  <%= f.input :topic_group_id, :collection => @topic_groups %>
  <%= f.input :manager %>
  <%= f.input :participating %>
  <%= f.input :user_id, :as => :hidden %>
  <%= f.button :submit %>

<% end %>
