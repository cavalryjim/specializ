<%= simple_form_for @company do |f| %>

  <%= f.input :name %>
  <%= f.input :logo, :hint => "Please provide the URL for your company's logo." %>
  <%= f.input :active, :disabled => !(can? :manage, :all) %>
  <%= f.input :never_expires, :disabled => !(can? :manage, :all) %>
  <%= f.input :expiration_date, :disabled => !(can? :manage, :all) %>
  <%= f.button :submit %>
<% end %>
