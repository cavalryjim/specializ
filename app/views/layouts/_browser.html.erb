<div style="width:100%;height:600px">


<div id="accordion">
    <h3><a href="#">Open Topics</a></h3>
    <div>
		<table>
		<% current_user.open_topic_groups.each do |topic_group| %>
		  <tr>
		    <td><%=link_to topic_group.name, topic_group_iteration_path(topic_group, topic_group.iterations.last) %> </td>
		  </tr>
		<% end %>
		</table>

	</div>
	<h3><a href="#">Closed Topics</a></h3>
    <div>
		<table>
		<% current_user.closed_topic_groups.each do |closed_topic_group| %>
		  <tr>
		    <td><%=link_to closed_topic_group.name, url_for([closed_topic_group, closed_topic_group.iterations.last]) %> </td>
		  </tr>
		<% end %>
		</table>

	</div>
    <h3><a href="#">Managed Topics</a></h3>
    <div>
		<table>
		<% current_user.managed_topic_groups.each do |managed_topic_group| %>
		  <tr>
		    <td><%=link_to managed_topic_group.name, url_for([managed_topic_group, managed_topic_group.iterations.last]) %></td>
		  </tr>
		<% end %>
		</table>
	</div>
</div> 
</div>

