<header>
  
  <%= link_to logo, root_path %>

  <nav>
    <ul>
	 <% if user_signed_in? %>
	  	<li><%= link_to "Me", me_path %></li>
		<% if can? :manage, Topic %>
		  <li><%= link_to "Manager", manager_path %></li>
		<% end %>
		<% if can? :manage, Grouping %>
		  <li><%= link_to "HR", hr_path %></li>
		<% end %>
		<% if can? :manage, User %>
		  <li><%= link_to "Admin", company_admin_path %></li>
		<% end %>
		<% if can? :manage, :all && current_user.email.split('@').last == 'peoplenetz.com' %>
		  <li><%= link_to "Peoplenetz", admin_path %></li>
		<% end %>
		<li> Signed in as <%= current_user.email %></li>
		<li><%= link_to "Sign out", destroy_user_session_path, :method => :delete %></li>
	 <% else %>
	  	<li><%= link_to "Request account", new_user_registration_path %> or <%= link_to "sign in", authentications_path %> </li>
	 <% end %>
    </ul>
	 
  </nav>

</header>