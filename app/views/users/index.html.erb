<h3>Listing users</h3>

<div>
	<table id="user_table">
	 <thead>
	  <tr>
	    <th>First Name</th>
	    <th>Last Name</th>
		<th>email</th>
		<th>Active</th>
	    <th></th>
	  </tr>
	 </thead>
	 <tbody>
	 <% for user in @users %>
	  <tr>
	    <td><%= link_to user.first_name, edit_user_path(user) %></td>
	    <td><%= link_to user.last_name, edit_user_path(user) %></td>
		<td><%= link_to user.email, edit_user_path(user) %></td>
		<td><%= check_box_tag user.id, 1, user.active, { :disabled => true } %></td>
	    <td><%= link_to 'Delete', user, :confirm => 'Are you sure?', :method => :delete %></td>
	  </tr>
	 <% end %>
	 </tbody>
	</table>
</div>

<%= link_to 'New User', new_user_path%> <br />

<div>
	<%= form_tag({ :controller => "users", :action => "import_users" }, {:multipart => true} ) do %>
	
		Upload users: <%= file_field_tag 'file' %>
		
		<%= submit_tag("Submit List", :confirm => 'Upload list from spreadsheet?') %>
	<% end %>
</div>

