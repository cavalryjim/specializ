<div>
<h4><%= @grouping.fullname%></h4>

<div>
	<table id="group_staffing_table" class="display fouc">
	 <thead>
	  <tr>
	    <th class="center">Name</th>
		<th class="center">Email</th>
	    <th class="center">Remove</th>
	    
	  </tr>
	 </thead>
	 <tbody>
		<% @users.each do |user| %>
		  <tr>
		    <td><%= user %></td>
		    <td><%= user.email %></td>
		    <td class="center">
			  <%= link_to image_tag('icons/cross.png'), grouping_user_path(@grouping, user)+'/remove' , 
						:confirm => 'Remove user from this group?', :method => "post" %>
			</td>
		  </tr>
		<% end %>
	 </tbody>
	</table>
</div>

<% if @grouping.id != nil %>
	<%= form_tag grouping_path(@grouping)+'/add_user' %>
		<%= submit_tag 'Add user' %>
		<%= autocomplete_field_tag 'user', '', autocomplete_user_last_name_groupings_path, :id_element => '#grouping_user_id' %> Start typing the user's last name
		<%= hidden_field_tag 'grouping_user_id' %>

	<%= #button_to 'Add user', grouping_path(@grouping)+'/new_user'  
	%>
<% end %>
</div>